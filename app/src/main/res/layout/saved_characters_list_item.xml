<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivSavedCharacters"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:foreground="@drawable/ic_cycle"
        android:src="@drawable/ic_character"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSavedCharacters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:fontFamily="@font/circular_std"
        android:gravity="center"
        android:maxLines="2"
        android:text="Example Character"
        app:layout_constraintEnd_toEndOf="@id/ivSavedCharacters"
        app:layout_constraintStart_toStartOf="@id/ivSavedCharacters"
        app:layout_constraintTop_toBottomOf="@id/ivSavedCharacters" />

</androidx.constraintlayout.widget.ConstraintLayout>